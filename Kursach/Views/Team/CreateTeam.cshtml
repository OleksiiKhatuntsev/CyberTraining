@model BOL.Models.Team

@{
    ViewData["Title"] = "CreateTeam";
}

<h2>Create a team</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTeam">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TeamName" class="control-label"></label>
                <input asp-for="TeamName" class="form-control" />
                <span asp-validation-for="TeamName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.GameName" class="control-label"></label>
                <select asp-for="Game.GameName" class ="form-control" asp-items="ViewBag.GameName"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

