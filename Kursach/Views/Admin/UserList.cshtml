@model IEnumerable<BOL.Models.User>

@{
    ViewData["Title"] = "User List";
}

<h2>User Approve</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role.RoleName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role.RoleName)
            </td>
            <td>
                @if (item.Role.RoleName == "NonApproved")
                {
                    <a asp-action="ApproveUser" asp-route-userId="@item.UserId">Approve</a> <p>|</p>
                }
                <a asp-action="DeleteUser" asp-controller="Admin" asp-route-userId="@item.UserId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
